<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textColor="#6379f6"
            android:lineSpacingExtra="8sp"
            android:text="Book Info"

            android:layout_marginTop="17dp"
            android:layout_marginLeft="72dp"
            android:layout_marginBottom="11dp"
            />


</LinearLayout>

    <LinearLayout
        android:background="#f8f8fa"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:layout_width="271dp"
            android:layout_height="match_parent"

            android:text="DETAILS"
android:textStyle="bold"
            android:layout_marginTop="21dp"
            android:textSize="12sp"
            android:layout_marginLeft="16dp"
            android:letterSpacing="0.6"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:src="@drawable/book"
            android:layout_width="40dp"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="48dp"
            android:layout_height="31dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="Book name"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textColor="#47494f"
                android:layout_marginLeft="25dp"
                android:id="@+id/book_name_info" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textColor="#9095aa"
                    android:text="by"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/age" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:textSize="13sp"
                    android:textColor="#47494f"
                    android:text="author name"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/author_name_info" />
            </LinearLayout>
            <TextView
                android:text="ISBN"
                android:textStyle="normal"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:textColor="#9095aa"
                android:layout_marginLeft="25dp"
                android:id="@+id/isbn_info" />

            <TextView

                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="29dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="book details"
                android:textColor="#9095aa"

                android:scrollbars="vertical"
                android:textSize="12sp"
                android:padding="0dp"
                android:id="@+id/details_info" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
</LinearLayout>